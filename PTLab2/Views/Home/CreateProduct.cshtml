@model PTLab2.Models.Product

<h2>Карточка товара</h2>
<form asp-action="CreateProduct" asp-controller="home">
    <p>
        <label asp-for="Name">Название</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Price">Цена</label><br />
        <input type="number" step="0.01" asp-for="Price" />
    </p>
    <p>
        <label asp-for="Count">Количество</label><br />
        <input type="number" asp-for="Count" />
    </p>
    <p>
        <input type="submit" value="Добавить товар" />
    </p>
</form>

